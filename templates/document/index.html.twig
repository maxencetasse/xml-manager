{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Document index</h1>
        <div>
            <a class="btn btn-primary" role="button" href="{{ path('app_document_new') }}"><i class="bi bi-plus m-1"></i>New</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>AddDate</th>
                <th>BaseName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.name }}</td>
                <td>{{ document.addDate ? document.addDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ document.baseName }}</td>
                <td>
                    <a class="btn btn-info" role="button" href="{{ path('app_document_show', {'id': document.id}) }}"><i class="bi bi-info-circle m-1"></i>Show</a>
                    <a class="btn btn-primary" role="button" href="{{ path('app_document_edit', {'id': document.id}) }}"><i class="bi bi-pencil-square m-1"></i>Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
