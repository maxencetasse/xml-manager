{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>
    <a class="btn btn-primary" role="button" href="{{ path('app_document_index') }}"><i class="bi bi-arrow-return-left m-1"></i>Back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ document.name }}</td>
            </tr>
            <tr>
                <th>AddDate</th>
                <td>{{ document.addDate ? document.addDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>BaseName</th>
                <td>{{ document.baseName }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-end gap-1 m-1">
        <a class="btn btn-primary" role="button" href="{{ path('app_document_edit', {'id': document.id}) }}"><i class="bi bi-pencil-square m-1"></i>Edit</a>
        {{ include('document/_delete_form.html.twig') }}
    </div>
{% endblock %}
