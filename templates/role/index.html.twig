{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Role index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>
                    <a class="btn btn-info" role="button" href="{{ path('app_role_show', {'id': role.id}) }}"><i class="bi bi-info-circle m-1"></i>show</a>
                    <a class="btn btn-primary" role="button" href="{{ path('app_role_edit', {'id': role.id}) }}"><i class="bi bi-pencil-square m-1"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('app_role_new') }}">Create new</a>
{% endblock %}
