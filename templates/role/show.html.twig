{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end gap-1">
        <a class="btn btn-primary" role="button" href="{{ path('app_role_index') }}"><i class="bi bi-arrow-return-left m-1"></i>Back to list</a>

        <a class="btn btn-primary" role="button" href="{{ path('app_role_edit', {'id': role.id}) }}"><i class="bi bi-pencil-square m-1"></i>Edit</a>

        {{ include('role/_delete_form.html.twig') }}
    </div>
{% endblock %}
