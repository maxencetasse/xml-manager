{% extends 'base.html.twig' %}

{% block title %}Node index{% endblock %}

{% block body %}
    <h1>Node index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for node in nodes %}
            <tr>
                <td>{{ node.id }}</td>
                <td>{{ node.name }}</td>
                <td>{{ node.type }}</td>
                <td>{{ node.value }}</td>
                <td>
                    <a href="{{ path('app_node_show', {'id': node.id}) }}">show</a>
                    <a href="{{ path('app_node_edit', {'id': node.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_node_new') }}">Create new</a>
{% endblock %}
